{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "jinja": true,
            "justMyCode": true,
            "windows": {
                "python": "${workspaceFolder}/backend/venv/Scripts/python.exe"
            },
            "linux": {
                "python": "${workspaceFolder}/backend/venv/bin/python"
            },
            "osx": {
                "python": "${workspaceFolder}/backend/venv/bin/python"
            },
            "serverReadyAction": {
                "pattern": "Uvicorn running on (https?://[^\\s]+)",
                "uriFormat": "%s/scalar",
                "action": "openExternally"
            }
        }
    ]
}